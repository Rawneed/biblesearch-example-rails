	%body{:class => "#{controller_name} #{action_name}"}

		#nav
			%div.searchbar
				.container.cf
					= render 'layouts/navigation'
		#main{:role => "main"}
			.container
				= render 'layouts/messages'
				= yield
			%footer
		= link_to about_path, {:class => "aboutsite"} do
			%i.icon-info
			/ ! end of .container
		/ ! end of #main
